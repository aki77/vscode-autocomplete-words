{
  "name": "autocomplete-words",
  "displayName": "Autocomplete Words",
  "description": "Create completion items from other open files.",
  "version": "0.1.0",
  "publisher": "aki77",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/aki77/vscode-autocomplete-words.git"
  },
  "bugs": {
    "url": "https://github.com/aki77/vscode-autocomplete-words/issues"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Autocomplete Words",
      "properties": {
        "autocompleteWords.languages": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "wordPattern": {
                "type": "string"
              },
              "suggestWords": {
                "type": "array",
                "items": "string"
              },
              "ignoredWords": {
                "type": "array",
                "items": "string"
              }
            }
          },
          "default": {
            "ruby": {
              "wordPattern": "(-?\\d+(?:\\.\\d+))|([A-Za-z][^-`~@#%^&()=+[{}|;:'\",<>\\/.*\\]\\s\\\\!?]*[!?]?)",
              "ignoredWords": [
                "class",
                "module"
              ]
            },
            "haml": {
              "ignoredWords": [
                "class"
              ]
            },
            "typescript": {
              "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)/",
              "ignoredWords": [
                "class",
                "function",
                "const"
              ]
            },
            "javascript": {
              "ignoredWords": [
                "class",
                "function",
                "const"
              ]
            },
            "json": {
              "wordPattern": "(\"(?:[^\\\\\\\"]*(?:\\\\.)?)*\"?)|[^\\s{}\\[\\],:]+"
            },
            "jsonc": {
              "wordPattern": "(\"(?:[^\\\\\\\"]*(?:\\\\.)?)*\"?)|[^\\s{}\\[\\],:]+"
            }
          }
        },
        "autocompleteWords.minWordLength": {
          "type": "number",
          "default": 4,
          "description": "Minimum word length to keep in autocomplete list."
        },
        "autocompleteWords.maxLineCount": {
          "type": "number",
          "default": 999,
          "description": "Exclude files larger than the maximum number of lines."
        },
        "autocompleteWords.maxDocumentCount": {
          "type": "number",
          "default": 10,
          "description": "Maximum number of documents used for suggest."
        },
        "autocompleteWords.excludeFiles": {
          "type": "array",
          "items": "string",
          "default": [
            "settings",
            "settings/editor",
            "vscode-extensions",
            "extensions",
            "vs_code_welcome_page",
            "tsconfig.schema.json"
          ],
          "description": "Maximum number of documents used for suggest."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.37.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.0.2"
  },
  "dependencies": {
    "p-immediate": "^3.1.0"
  }
}
